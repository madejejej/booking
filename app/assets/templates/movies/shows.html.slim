alert ng-repeat="alert in alerts" type="alert.type" close="closeAlert($index)"
  | {{alert.msg}}
table.table.table-hover
  thead
    tr
      th Cinema
      th Screen
      th Date
      th Make Reservation
  tbody
    tr ng-repeat="show in shows"
      td
        | {{show.cinema.name}}
      td
        | {{show.screen.name}}
      td
        | {{show.date}}
      td
        a ng-click="openReservationDialog(show.id)" Make Reservation